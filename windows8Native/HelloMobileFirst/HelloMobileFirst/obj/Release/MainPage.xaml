<Page
    x:Class="HelloMobileFirst.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:HelloMobileFirst"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Rectangle Fill="#FF2F2F33" HorizontalAlignment="Left" Height="768" Stroke="Black" VerticalAlignment="Top" Width="406"/>

        <Button x:ConnectionId='1' x:Name="ConnectBtn" Content="Connect" HorizontalAlignment="Left" Margin="43,438,0,0" VerticalAlignment="Top" Height="68" Width="322"                             FontSize="22"/>
        <Button x:ConnectionId='2' x:Name="InvokeProcBtn" Content="Invoke Procedure" HorizontalAlignment="Left" Margin="43,575,0,0" VerticalAlignment="Top" Height="68" Width="322"                              FontSize="22"/>
        <TextBlock HorizontalAlignment="Left" Margin="0,143,0,0" Text="IBM Mobile First" VerticalAlignment="Top" Height="113" Width="406"  FontSize="48" TextAlignment="Center"/>

        <ScrollViewer x:Name="ScrollView" HorizontalAlignment="Left" Height="744" Margin="411,0,0,0" VerticalAlignment="Top" Width="955">
            <TextBlock x:ConnectionId='3' x:Name="ResultOut" HorizontalAlignment="Left" Margin="0,0,0,0" TextWrapping="Wrap" Text="Hello!" VerticalAlignment="Top" Height="Auto" Width="Auto" FontSize="30"                                    />

        </ScrollViewer>

    </Grid>
</Page>

